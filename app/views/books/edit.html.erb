<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
    <div class="error">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
        <ul>
          <%= message %>
        </ul>
      <% end %>
    </div>
    <% end %>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label>Opinion</label>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-secondary" %>
      </div>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>