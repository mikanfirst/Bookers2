<div class="container px-5">
    <div class="row">
        <div class="col-md-3">
            <h1>New book</h1>
            <%= form_with model: @book, url:'/books', local:true do |f| %>
                <div>
                    <label>Title</label>
                    <%= f.text_field :title %>
                </div>
                <div>
                    <label>Opinion</label>
                    <%= f.text_area :body %>
                </div>
                <div>
                    <%= f.submit :Create_Book, class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
