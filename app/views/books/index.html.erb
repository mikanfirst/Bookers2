<div class="container px-5 px-sm-0">
  <% if @newbook.errors.any? %>
    <div class="error">
      <h2><%= @newbook.errors.count %>errors prohibited this obj from being saved:</h2>
      <% @newbook.errors.full_messages.each do |message| %>
        <ul>
          <%= message %>
        </ul>
      <% end %>
  <% end %>
    </div>
  <div class="row">
  <%= render 'books/info' %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to book.user do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50,50, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
